doctype html 

html(lang="en-UK")

  head 
    block title
      title ThrSqr - There or Square 
    meta(charset="UTF-8")
    link(rel="stylesheet" href="//fonts.googleapis.com/css?family=Hepta+Slab")
    // link(rel="stylesheet" href="/stylesheets/whitespace-reset.css")
    link(rel="stylesheet" href="/stylesheets/application.css")
    meta(name="author" content="Marc Hermann")
    meta(name="description" content="ThrSqr - RSVP app for weekly events.")
    block script
      script(src="/javascript/application.js")

  body 
    header 
      block headerlinks 
        a(href="/") Home

    main 
    - let msgTypes = Object.keys(flash || {});
    if msgTypes.length > 0
    ul 
      each msgType in msgTypes 
        each message in flash[msgType] 
          li.flash(class=type)= message 

    block main 