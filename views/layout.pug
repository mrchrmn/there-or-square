doctype html 

html(lang="en-UK")

  head 
    block title
      title ThrSqr - Are you There or are your Square?
    meta(charset="UTF-8")
    link(rel="stylesheet" href="/fonts/stylesheet.css")
    link(rel="stylesheet" href="/stylesheets/normalize.css")
    link(rel="stylesheet" href="/stylesheets/application.css")
    meta(content="width=device-width, initial-scale=1" name="viewport")
    meta(name="author" content="Marc Hermann")
    meta(name="description" content="ThrSqr - RSVP tracker for weekly events and friendly people.")
    block script
      script(src="/javascript/application.js")

  body 
    header 
      block headerlinks 
        <a href="/">Home</a> | <span class="headerlinks"><a href="/reset/user">#{TEXTS.resetUserData}</a> | <a href="/change-language">#{TEXTS.changeLanguage}</a></span>

    main 
      - let msgTypes = Object.keys(flash || {});
      if msgTypes.length > 0
      ul 
        each msgType in msgTypes 
          each message in flash[msgType] 
            li.flash(class=type)= message 

      block main 

  block footer
    footer 
      p!= TEXTS.disclaimer
      p
        a(href="/change-language")= TEXTS.changeLanguage