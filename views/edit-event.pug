extends layout 

block title 
  title=`${eventTitle} | Edit event details | ThrSqr - There or Square`

block main 
  h1= event.title
  h2 Edit event details
  form(action=`/event/edit/${event.id}` method="post")
    dl 
      dt 
        label(for="eventTitle") The event is called...
      dd 
        input(type="text" 
              id="eventTitle" 
              name="eventTitle"
              value=event.title
              placeholder="New event title"
              maxlength=100 
              required)    
      dt 
        label(for="eventDayOfWeek") and takes place every...
      dd 
        select(name="eventDayOfWeek" required)
          each val, index in ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"]
            if index === event.dayofweek 
              option(selected value=index)= val 
            else
              option(value=index)= val 
      dt 
        label(for="eventTime") Time:
      dd 
        input(type="time" 
              id="eventTime" 
              name="eventTime" 
              value=event.eventtime
              required)
        input(type="hidden"
              id="eventTimeZone"
              name="eventTimeZone"
              value="")
      dt 
        label(for="eventInfo") Additional info, eg. place (optional):
      dd 
        textarea(rows=4 
                 maxlength=150
                 id="eventInfo" 
                 name="eventInfo" 
                 placeholder="Additional Info")=event.info

    input(type="submit" value="Update event")
